{
    "version": 2,
    "builds": [
      {
        "src": "backend/src/main.ts",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/next.config.js",
        "use": "@vercel/next"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/src/main.ts"
      },
      {
        "source": "/(.*)",
        "destination": "/frontend"
      }
    ]
  }